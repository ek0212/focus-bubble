{
    "manifest_version": 3,
    "name": "Focus Bubble",
    "version": "1.0.0",
    "description": "Block distractions while using focus apps",
    "permissions": ["tabs", "storage", "scripting", "alarms"],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": {
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "128": "icons/icon128.png"
    }
  }
